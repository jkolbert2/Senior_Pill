<%= csrf_meta_tags %>

<div class="main">
  <div class="container-fluid text-center">
      
    <div class="row content">
      <div class="col-sm-2 sidenav">
      </div>
      <div class="col-sm-8 text-center"> 
    <h1>
      <%= image_tag("pills.png", height: "235", width: "300") %>
      <br>
      Pill Project
    </h1>
    <table class="table table-bordered table-hover"> 
    <thead>
      <tr>
      <th> Date </th>
      <th> Name </th>
      <th> Drug </th>
      <th> Purpose </th>
      <th> Amount </th>
      <th> Email </th>
      </tr>
    </thead>
    <tbody>
       <% @reminders.each do |drug| %>
         <% if drug != nil %>
       <tr>
          <td> <%= drug.Date %> </td>
          <td> <%= link_to(drug.Name, user_reminders_path(drug.id)) %> </td>
          <td> <%= drug.Drug %> </td>
          <td> <%= drug.Purpose %> </td>
          <td> <%= drug.Amount %> </td>
          <td> <%= drug.Email %> </td>
          <td> <%= drug.user_id %> </td>
        </tr>
        <%end%>
        <%end%>
    </tbody>
    </table>
    <br>
    <%= button_to "New Reminder", { :action => "new" }, :method => :get, class: 'btn btn-warning' %>
      </div>
      <div class="col-sm-2 sidenav">
      </div>
    </div>
</div>
    
  </div>
</div>