<div class="main">
  <div class="container-fluid">
      
    <div class="row content">
    <div class="col-sm-2 sidenav">
    </div>
    <div class="col-sm-8 text-center"> 
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
            <th> Date </th>
            <th> Drug </th>
            <th> Doctor </th>
            <th> Purpose </th>
            <th> Amount </th>
            <th> Email </th>
            <th> Frequency </th>
            <th> Active </th>
            
            </tr>   
        </thead>
        <tbody>
            <tr>
            <td><%=@reminder.Date %></td>
            <td><%=@reminder.Drug %></td>
            <td><%=@reminder.doctor%></td>
            <td><%=@reminder.Purpose %></td>
            <td><%=@reminder.Amount %></td>
            <td><%=@reminder.Email %></td>
            <td><%=@reminder.frequency %> </td>
            <% if @reminder.Active? %>
            <td> <%= image_tag("lightbulbyellow.png", height: "20", width: "20") %></td>
            <% else %>
            <td> <%= image_tag("lightbulb.png", height: "20", width: "20") %></td>
            <% end %>
            </tr>
        </tbody>
    </table>
        <%= button_to "Send Email Reminder", {:action => "send_reminder"}, :method => :get, class: "btn btn-warning" %>
        <br>
        <%= link_to 'Back to Profile', user_path(current_user.id), class:"btn btn-warning" %>
    </div>
    
    <div class="col-sm-2 sidenav">
    </div>
</div>
