<%= csrf_meta_tags %>
<div class="container-fluid">
  <div class="row content"> 
    <div class="col-sm-4 sidenav">
    </div>
    <div class="col-sm-4 "> 
        <%= form_for [@user, @reminder] do |f| %>
        <div class="form-group">
          <%= f.label :Date %>
          <%= f.date_select :Date, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 100}, {required: true}%>
        </div>  
        
        <div class="form-group">
          <%= f.label :Drug, "Drug" %>
          <%= f.text_field :Drug, class:"form-control", placeholder: "Drug", :required => true %>
        </div>
        
         <%= f.label :time, "Time and Date", :class => 'control-label col-lg-2' %>
        <!-- Rails expects time_select when dealing with ActiveRecord forms -->
        <div class="col-lg-2">
          <%= time_select :appointment, :time, {:class => "form-control" } %>
        </div>
        <div class="col-lg-4">
          <%= date_select :appointment, :time, {:class => "form-control" } %>
        </div>
    <%=f.error_span(:time) %>
        
        <div class="form-group">
          <%= f.label :Amount, "Amount" %>
          <%= f.text_field :Amount, class:"form-control", placeholder: "Amount", :required => true %>
        </div>
        
        <div class="form-group">
          <%= f.label :Purpose, "Purpose" %>
          <%= f.text_field :Purpose, class:"form-control", placeholder: "Purpose" %>
        </div>
        
        <div class="form-group">
          <%= f.label :Email, "Email" %>
          <%= f.text_field :Email, class:"form-control",placeholder: "Email", :required => true %>
        </div>
        
          <%= f.submit "Submit", class: "btn btn-default btn-warning btn-block" %>
        
        <div class="form-group">
          <%end%>
          <br>
            <div class = "btn btn-warning btn-block"><%= link_to 'Back to Profile', user_path(current_user.id) %></div>
        </div>
    </div>
</div>
  