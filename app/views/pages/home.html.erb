<div class="container">
  <br>
  <% if logged_in? %>
  <br>
    <h3 class="text-center"> Your Active Pill Reminders</h3>
  <br>
  <table class="table table-bordered text-center"> 
    <thead>
      <tr>
      <th> Date </th>
      <th> Drug </th>
      <th> Purpose </th>
      <th> Amount </th>
      <th> Frequency </th>
      <th> Active </th>
      </tr>
    </thead>
    <tbody>
        <% current_user.reminders.each do |drug| %>
         <% if drug.Active? %>
       <tr>
          <td> <%= drug.Date %> </td>
          <td> <%= drug.Drug %> </td>
          <td> <%= drug.Purpose %> </td>
          <td> <%= drug.Amount %> </td>
          <td> <%= drug.frequency %> </td>
          <% if drug.Active? %>
          <td> <%= image_tag("lightbulbyellow.png", height: "20", width: "20") %></td>
          <% else %>
          <td> <%= image_tag("lightbulb.png", height: "20", width: "20") %></td>
          <% end %>
        </tr>
        <%end%>
        <%end%>
      <div>
      <% if current_user.admin? %>
       <h3 class="text-center"> Hey there Doctor! </h3>
      <%end%>
      </div>
    </tbody>
    </table>
   
      
  
  <div class="jumbotron"  style="background-color: #ffe6e6;">
    <h1>Pill Project</h1> 
    <p>This site will hopefully remind you to take your medication and is very much under construction.
    Our privacy policy can be found  <a href="https://www.freeprivacypolicy.com/privacy/view/1a7f70ddcc5ce5fb7857a6d8727ca9c1">here.</a>
    </p> 
  </div>
  <% else %>
  <div class="jumbotron">
    <h1>Pill Project</h1> 
    <p>This site will hopefully remind you to take your medication and is very much under construction.
      Our privacy policy can be found  <a href="https://www.freeprivacypolicy.com/privacy/view/1a7f70ddcc5ce5fb7857a6d8727ca9c1">here.</a>
    </p> 
  </div>
  <% end %>
  <% if logged_in? %>
  <%= link_to 'New Pill Reminder', new_user_reminder_path(current_user.id), class:"btn btn-warning" %>
  <% end %>
</div>
<style>
  h1 {
    font-size: 2.6em;
  }
  p {
    font-size: 1.6em;
  }
</style>